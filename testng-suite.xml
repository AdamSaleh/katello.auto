<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Kalpana GUI Test Suite">
  <test name="Login">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="login"/>
        <include name="setup" />
        <exclude name="start-logged-in"/>
      </run>
    </groups>
  </test>

  <test name="Organizations">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="organizations"/>
        <include name="setup" />
      </run>
    </groups>
  </test>

  <test name="Environments">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="environments"/>
        <include name="setup" />
      </run>
    </groups>
  </test>

  <test name="ContentProviders">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="content-providers"/>
        <include name="setup" />
      </run>
    </groups>
  </test>

  <test name="Promotions">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="promotions"/>
        <include name="setup" />
      </run>
    </groups>
  </test>
  <test name="SyncManagement">
    <packages>
      <package name="kalpana.tests" />
    </packages>    
    <groups>
      <run>
        <include name="sync"/>
        <include name="setup" />
      </run>
    </groups>
  </test>
</suite>

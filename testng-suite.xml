<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Kalpana GUI Test Suite">
  <test name="Login">
    <packages>
      <package name="kalpana.tests.login_tests" />
      <package name="kalpana.tests.setup"></package>
    </packages>    
    <groups>
      <run>
        <include name="login"/>
        <include name="setup" />
      </run>
    </groups>
  </test>

  <test name="Organizations">
    <packages>
      <package name="kalpana.tests.organizations" />
      <package name="kalpana.tests.setup"></package>
    </packages>    
    <groups>
      <run>
        <include name="organizations"/>
        <include name="setup" />
      </run>
    </groups>
  </test>

</suite>
